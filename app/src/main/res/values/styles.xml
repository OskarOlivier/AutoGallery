<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - let Material3 handle most colors -->
    <style name="Theme.AutoGallery" parent="Theme.Material3.DayNight">
        <!-- Only override primary color, let Material3 generate the rest -->
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.AutoGallery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AutoGallery.Fullscreen" parent="Theme.AutoGallery.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Enhanced fullscreen theme with edge-to-edge support for Android 14+ -->
    <style name="Theme.AutoGallery.Fullscreen.EdgeToEdge" parent="Theme.AutoGallery.Fullscreen">
        <!-- Transparent system bars for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Dark system bar icons for better visibility -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Additional edge-to-edge configuration -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Ensure content draws behind system bars -->
        <item name="android:fitsSystemWindows">false</item>

        <!-- Force black background -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>