<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - let Material3 handle most colors -->
    <style name="Theme.AutoGallery" parent="Theme.Material3.DayNight">
        <!-- Only override primary color, let Material3 generate the rest -->
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.AutoGallery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AutoGallery.Fullscreen" parent="Theme.AutoGallery.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>