<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permissions"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/checkPermissionsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check and Grant Permissions"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/permissionStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checking permissions..."
                    android:textAppearance="?attr/textAppearanceBodySmall" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Folder Selection"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectFolderButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select Folder"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/refreshFolderButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refresh"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/folderInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No folder selected"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/scanProgressIndicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:indeterminate="true"
                        android:visibility="gone" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/scanProgressText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Scanning folder..."
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:visibility="gone" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Image Analysis"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/orientationStatsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No images scanned"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="12dp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slideshow Settings"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slide Duration"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/slideDurationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5s per slide"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slideDurationSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="5"
                    android:valueTo="300"
                    android:value="5"
                    android:stepSize="1"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Type"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/orderTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transition Effect"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/transitionTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zoom Effect"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/zoomTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zoom Amount"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/zoomAmountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="103% zoom"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/zoomAmountSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="5"
                    android:value="3"
                    android:stepSize="1"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/blurredBackgroundSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blurred background for aspect ratio fill"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/featheringSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edge feathering effect"
                    android:layout_marginBottom="8dp"
                    android:checked="true" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orientation Filtering"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show only appropriate images based on device orientation. Square images are always shown in both orientations."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/orientationFilteringSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable orientation-based filtering"
                    android:layout_marginBottom="16dp"
                    android:checked="true" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Square Detection Sensitivity"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/squareDetectionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sensitivity: 80% (Strict)"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/squareDetectionSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.5"
                    android:valueTo="1.0"
                    android:value="0.8"
                    android:stepSize="0.05" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Battery Management"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose when slideshow should start based on battery status"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/batteryManagementRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chargingOnlyRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Only when charging"
                        android:layout_marginBottom="8dp"
                        android:checked="true" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/batteryLevelOnlyRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Only when battery >20%" />

                </RadioGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>